@{
    ViewData["Title"] = "Home Page";
}

    <!-- Hero Section -->
    <section class="hero">
        <div class="container mx-auto px-4">
            <div class="hero-content max-w-4xl">
                <h1 class="hero-title">Find Your Perfect Stay in Austin</h1>
                <p class="hero-subtitle">Discover unique homes and experiences in the heart of Texas</p>

                <div class="search-container">
                    <form class="search-form">
                        <div class="search-group">
                            <label class="search-label">Location</label>
                            <input type="text" class="search-input" placeholder="Where in Austin?" />
                        </div>

                        <div class="search-group">
                            <label class="search-label">Check in</label>
                            <input type="date" class="search-input" />
                        </div>

                        <div class="search-group">
                            <label class="search-label">Check out</label>
                            <input type="date" class="search-input" />
                        </div>

                        <button type="submit" class="search-button">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                            Search
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Properties -->
    <section class="py-16">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold mb-2">Featured Properties</h2>
                <p class="text-gray-600">Handpicked homes for your next stay</p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Property Cards (same as original) -->
                <!-- Property Card 1 -->
                <div class="property-card">
                    <img src="/api/placeholder/400" alt="Luxury Apartment" class="property-image">
                    <div class="p-6">
                        <div class="text-sm font-medium text-blue-600 mb-2">Luxury Apartment</div>
                        <h3 class="text-xl font-bold mb-2">Modern Downtown Loft</h3>
                        <div class="text-2xl font-bold text-gray-900 mb-4">$199/night</div>
                        <div class="text-gray-600">
                            <span>2 Beds</span>
                            <span class="mx-2">•</span>
                            <span>2 Baths</span>
                            <span class="mx-2">•</span>
                            <span>Downtown</span>
                        </div>
                    </div>
                </div>
                <!-- Add more property cards... -->
            </div>
        </div>
    </section>

    <!-- Features Section (New) -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center mb-12">
