@{
}



@model RegisterViewModel
@{
    ViewData["Title"] = "Register - BevoBnB";
    Layout = null;
}


    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #2563eb;
            --light-blue: #eff6ff;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #eff6ff 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .register-container {
            width: 100%;
            max-width: 800px;
            margin: 20px;
            background: white;
            padding: 2.5rem;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #1e3a8a;
            margin-bottom: 0.5rem;
        }

        .form-input {
            width: 100%;
            padding: 0.75rem;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

            .form-input:focus {
                outline: none;
                border-color: var(--primary-blue);
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

        .form-error {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .btn-primary {
            background-color: var(--primary-blue);
            color: white;
            padding: 0.875rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
                transform: translateY(-1px);
            }

        .validation-summary {
            background-color: #fee2e2;
            border: 1px solid #fecaca;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .input-icon {
            position: relative;
        }

        .icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            width: 20px;
            height: 20px;
        }

        .icon-input {
            padding-left: 2.5rem;
        }

        .success-checkmark {
            color: #10b981;
            display: none;
        }

        .form-input:valid + .success-checkmark {
            display: block;
        }
    </style>
    <div class="register-container">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Create Your Account</h1>
            <p class="text-gray-600">Join BevoBnB and start your journey with us</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="validation-summary">
                <div asp-validation-summary="All" class="text-sm text-red-600"></div>
            </div>
        }

        <form asp-controller="Home" asp-action="Register" method="post" class="space-y-6">
            @Html.AntiForgeryToken()

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- First Name -->
                <div class="form-group">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <div class="input-icon">
                        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <input asp-for="FirstName" class="form-input icon-input" placeholder="Enter your first name" required>
                    </div>
                    <span asp-validation-for="FirstName" class="form-error"></span>
                </div>

                <!-- Last Name -->
                <div class="form-group">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <div class="input-icon">
                        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <input asp-for="LastName" class="form-input icon-input" placeholder="Enter your last name" required>
                    </div>
                    <span asp-validation-for="LastName" class="form-error"></span>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <div class="input-icon">
                        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <input asp-for="Email" class="form-input icon-input" type="email" placeholder="you@example.com" required>
                    </div>
                    <span asp-validation-for="Email" class="form-error"></span>
                </div>

                <!-- Phone -->
                <div class="form-group">
                    <label asp-for="Phone" class="form-label">Phone</label>
                    <div class="input-icon">
                        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        <input asp-for="Phone" class="form-input icon-input" placeholder="(555) 555-5555" required>
                    </div>
                    <span asp-validation-for="Phone" class="form-error"></span>
                </div>

                <!-- Password -->
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="input-icon">
                        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                        <input asp-for="Password" class="form-input icon-input" type="password" placeholder="••••••••" required>
                    </div>
                    <span asp-validation-for="Password" class="form-error"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <div class="input-icon">
                        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                        <input asp-for="ConfirmPassword" class="form-input icon-input" type="password" placeholder="••••••••" required>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="form-error"></span>
                </div>
            </div>

            <!-- Address -->
            <div class="form-group">
                <label asp-for="Address" class="form-label">Address</label>
                <div class="input-icon">
                    <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <input asp-for="Address" class="form-input icon-input" placeholder="Enter your address" required>
                </div>
                <span asp-validation-for="Address" class="form-error"></span>
            </div>

            <!-- Birthday -->
            <div class="form-group">
                <label asp-for="Birthday" class="form-label">Birthday</label>
                <div class="input-icon">
                    <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <input asp-for="Birthday" class="form-input icon-input" type="date" required>
                </div>
                <span asp-validation-for="Birthday" class="form-error"></span>
            </div>

            <!-- User Type -->
            <div class="form-group">
                <label asp-for="UserType" class="form-label">Account Type</label>
                <div class="input-icon">
                    <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                <select asp-for="UserType" class="form-input icon-input" required>
                    <option value="">Select account type</option>
                    <option value="@((int)UserType.Customer)">Customer</option>
                    <option value="@((int)UserType.Host)">Host</option>
                </select>
                <span asp-validation-for="UserType" class="form-error"></span>
                </div>
                <span asp-validation-for="UserType" class="form-error"></span>
            </div>



            <div class="space-y-4">
                <button type="submit" class="btn-primary">
                    Create Account
                </button>

                <p class="text-center text-sm text-gray-600">
                    Already have an account?
                    <a asp-controller="Home" asp-action="Login" class="text-blue-600 hover:text-blue-800 font-medium">Sign In</a>
                </p>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>