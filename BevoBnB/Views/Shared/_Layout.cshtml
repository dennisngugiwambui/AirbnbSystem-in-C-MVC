    <link href="/css/site.css" rel="stylesheet" />
    
</head>
<body class="bg-gray-50">
    <!-- Navbar -->
    <nav class="navbar">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <a href="/" class="flex items-center space-x-2 text-xl font-bold">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                <span>BevoBnB</span>
            </a>
            <!-- Navbar -->
            <nav class="navbar">
                <div class="container mx-auto px-4 py-4 flex justify-between items-center">
                    <a asp-controller="Home" asp-action="Index" class="flex items-center space-x-2 text-xl font-bold">
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            <polyline points="9 22 9 12 15 12 15 22"></polyline>
                        </svg>
                        <span>BevoBnB</span>
                    </a>
                    <div class="flex items-center space-x-6">
                        <a asp-controller="Home" asp-action="Login" class="text-gray-600 hover:text-gray-900">Browse</a>
                        <a asp-controller="Home" asp-action="Login" class="text-gray-600 hover:text-gray-900">About</a>
                        <a asp-controller="Home" asp-action="Login" class="text-gray-600 hover:text-gray-900">Contact</a>
                        <a asp-controller="Home" asp-action="Login" class="btn btn-outline">Sign In</a>
                        <a asp-controller="Home" asp-action="Register" class="btn btn-primary">Sign Up</a>
                    </div>
                </div>
            </nav>
        </div>
    </nav>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    

