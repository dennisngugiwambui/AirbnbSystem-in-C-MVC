<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BevoBnB Admin</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <!-- Sidebar -->
    <aside class="sidebar fixed top-0 left-0 h-full bg-gray-900 text-white z-30">
        <div class="flex items-center justify-between p-4 border-b border-gray-800">
            <div class="flex items-center space-x-2">
                <i class="fas fa-home text-2xl text-blue-500"></i>
                <span class="text-xl font-bold">BevoBnB Admin</span>
            </div>
        </div>

        <nav class="p-4">
            <div class="mb-4 text-sm text-gray-400 uppercase">Management</div>
            <ul class="space-y-2">
                <li>
                    <a asp-controller="Admin" asp-action="Index" class="flex items-center space-x-3 p-3 rounded-lg @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "bg-blue-600 text-white" : "text-gray-300 hover:bg-gray-800")">
                        <i class="fas fa-chart-line w-6"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="ManageUsers" class="flex items-center space-x-3 p-3 rounded-lg @(ViewContext.RouteData.Values["Action"].ToString() == "ManageUsers" ? "bg-blue-600 text-white" : "text-gray-300 hover:bg-gray-800")">
                        <i class="fas fa-users w-6"></i>
                        <span>Users</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="ManageProperties" class="flex items-center space-x-3 p-3 rounded-lg @(ViewContext.RouteData.Values["Action"].ToString() == "ManageProperties" ? "bg-blue-600 text-white" : "text-gray-300 hover:bg-gray-800")">
                        <i class="fas fa-building w-6"></i>
                        <span>Properties</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="ManageReviews" class="flex items-center space-x-3 p-3 rounded-lg @(ViewContext.RouteData.Values["Action"].ToString() == "ManageReviews" ? "bg-blue-600 text-white" : "text-gray-300 hover:bg-gray-800")">
                        <i class="fas fa-star w-6"></i>
                        <span>Reviews</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Reports" class="flex items-center space-x-3 p-3 rounded-lg @(ViewContext.RouteData.Values["Action"].ToString() == "Reports" ? "bg-blue-600 text-white" : "text-gray-300 hover:bg-gray-800")">
                        <i class="fas fa-chart-bar w-6"></i>
                        <span>Reports</span>
                    </a>
                </li>
            </ul>

            <div class="my-4 border-t border-gray-800"></div>

            <div class="mb-4 text-sm text-gray-400 uppercase">Settings</div>
            <ul class="space-y-2">
                <li>
                    <a asp-controller="Admin" asp-action="ManageReservations" class="flex items-center space-x-3 p-3 rounded-lg @(ViewContext.RouteData.Values["Action"].ToString() == "ManageCategories" ? "bg-blue-600 text-white" : "text-gray-300 hover:bg-gray-800")">
                        <i class="fas fa-tags w-6"></i>
                        <span>Reservations</span>
                    </a>
                </li>
                <li>
                    <form asp-controller="Home" asp-action="Logout" method="post" id="logoutForm">
                        <button type="submit" class="w-full flex items-center space-x-3 p-3 rounded-lg text-gray-300 hover:bg-gray-800">
                            <i class="fas fa-sign-out-alt w-6"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content min-h-screen bg-gray-50">
        <!-- Top Bar -->
        <div class="bg-white shadow-sm">
            <div class="flex justify-between items-center px-8 py-4">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">@ViewData["Title"]</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="flex items-center space-x-2">
                        <span class="text-gray-700">Welcome, @User.Identity.Name!</span>
                        <i class="fas fa-user-circle text-2xl text-gray-600"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Page Content -->
        <div class="p-8">
            @RenderBody()
        </div>
    </main>

    @* Scripts *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            // Handle sidebar toggle for mobile
            $('.sidebar-toggle').on('click', function() {
                $('.sidebar').toggleClass('active');
            });

            // Handle responsive sidebar
            function handleResize() {
                if (window.innerWidth < 1024) {
                    $('.sidebar').removeClass('active');
                }
            }

            window.addEventListener('resize', handleResize);
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>