@using BevoBnB.ViewModels;

@using BevoBnB.Models;

@model UserDetailsViewModel

<div class="bg-white shadow-lg rounded-lg p-6 max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold">User Details</h2>
        <div class="flex space-x-3">
            <a asp-action="EditUser" asp-route-id="@Model.Id"
               class="px-4 py-2 bg-blue-100 text-blue-700 rounded-md hover:bg-blue-200">
                Edit
            </a>
            <form asp-action="ToggleUserStatus" asp-route-id="@Model.Id" method="post" class="inline">
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="px-4 py-2 @(Model.HireStatus ? "bg-red-100 text-red-700" : "bg-green-100 text-green-700") rounded-md hover:bg-opacity-80">
                    @(Model.HireStatus ? "Deactivate" : "Activate")
                </button>
            </form>
        </div>
    </div>

    <div class="grid grid-cols-2 gap-6">
        <div>
            <h3 class="font-semibold text-lg mb-4">Basic Information</h3>
            <dl class="grid grid-cols-2 gap-4">
                <dt class="text-gray-600">Full Name</dt>
                <dd>@Model.FullName</dd>

                <dt class="text-gray-600">Email</dt>
                <dd>@Model.Email</dd>

                <dt class="text-gray-600">Phone</dt>
                <dd>@Model.Phone</dd>

                <dt class="text-gray-600">Address</dt>
                <dd>@Model.Address</dd>

                <dt class="text-gray-600">Birthday</dt>
                <dd>@Model.Birthday.ToShortDateString()</dd>

                <dt class="text-gray-600">Status</dt>
                <dd>
                    <span class="px-2 py-1 rounded-full text-sm
                         @(Model.HireStatus ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                        @(Model.HireStatus ? "Active" : "Inactive")
                    </span>
                </dd>
            </dl>
        </div>

        <div>
            <h3 class="font-semibold text-lg mb-4">System Information</h3>
            <dl class="grid grid-cols-2 gap-4">
                <dt class="text-gray-600">User Type</dt>
                <dd>@Model.UserType</dd>

                <dt class="text-gray-600">Roles</dt>
                <dd>@string.Join(", ", Model.Roles)</dd>
            </dl>
        </div>
    </div>
</div>