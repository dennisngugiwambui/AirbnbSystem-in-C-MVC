

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - BevoBnB Host</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="~/css/Hostt.css" rel="stylesheet" />

</head>
<body class="bg-gray-100">
    <div class="host-layout">
        <!-- Mobile Menu Button -->
        <button id="mobileMenuButton" class="mobile-menu-button fixed top-4 left-4 z-50 md:hidden bg-white p-2 rounded-lg shadow-lg">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>

        <!-- Sidebar -->
        <aside id="sidebar" class="sidebar">
            <div class="flex flex-col h-full">
                <!-- Logo -->
                <div class="p-6 border-b border-gray-700">
                    <div class="flex items-center space-x-3">
                        <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        <span class="text-xl font-bold text-white">BevoBnB Host</span>
                    </div>
                </div>

                <!-- Navigation -->
                <nav class="flex-1 p-4 overflow-y-auto hide-scrollbar">
                    <div class="space-y-1">
                        <a asp-controller="Host" asp-action="Index"
                           class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                            <span>Dashboard</span>
                        </a>

                        <a asp-controller="Host" asp-action="Properties"
                           class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Properties" ? "active" : "")">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                            <span>My Properties</span>
                        </a>

                        <a asp-controller="Host" asp-action="Bookings"
                           class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Bookings" ? "active" : "")">
                            <div class="flex items-center justify-between w-full">
                                <div class="flex items-center">
                                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    <span>Bookings</span>
                                </div>
                                @if (ViewBag.NewBookings > 0)
                                {
                                    <span class="notification-badge">@ViewBag.NewBookings</span>
                                }
                            </div>
                        </a>

                        <a asp-controller="Host" asp-action="Messages"
                           class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Messages" ? "active" : "")">
                            <div class="flex items-center justify-between w-full">
                                <div class="flex items-center">
                                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                                    </svg>
                                    <span>Messages</span>
                                </div>
                                @if (ViewBag.UnreadMessages > 0)
                                {
                                    <span class="notification-badge">@ViewBag.UnreadMessages</span>

                                }
                            </div>
                        </a>

                        <a asp-controller="Host" asp-action="Earnings"
                           class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Earnings" ? "active" : "")">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span>Earnings</span>
                        </a>

                        <a asp-controller="Host" asp-action="Reviews"
                           class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Reviews" ? "active" : "")">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                            </svg>
                            <span>Reviews</span>
                        </a>
                    </div>
                </nav>

                <!-- Profile and Logout -->
                <div class="p-4 border-t border-gray-700">
                    <div class="flex items-center mb-4">
                        <div class="w-10 h-10 rounded-full bg-green-500 flex items-center justify-center text-white font-bold">
                            @(User?.Identity?.Name?[0].ToString().ToUpper() ?? "U")
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-white">@User?.Identity?.Name</p>
                            <p class="text-xs text-gray-400">Host Account</p>
                        </div>
                    </div>
                    <form asp-controller="Home" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="w-full px-4 py-2 text-sm text-white bg-red-600 rounded-lg hover:bg-red-700 transition-colors">
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Mobile Header -->
            <header class="mobile-header md:hidden bg-white shadow-sm p-4">
                <div class="flex items-center justify-between">
                    <h1 class="text-xl font-bold text-gray-900">@ViewData["Title"]</h1>
                    <div class="flex items-center space-x-4">
                        @if (ViewBag.UnreadMessages > 0 || ViewBag.NewBookings > 0)
                        {
                            <div class="relative">
                                <span class="absolute -top-1 -right-1 notification-badge">
                                    @(ViewBag.UnreadMessages + ViewBag.NewBookings)
                                </span>
                                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                                </svg>
                            </div>
                        }
                    </div>
                </div>
            </header>

            <div class="p-6">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        // Mobile menu toggle
        document.getElementById('mobileMenuButton').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('open');
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('sidebar');
            const mobileMenuButton = document.getElementById('mobileMenuButton');

            if (window.innerWidth <= 768 &&
                !sidebar.contains(event.target) &&
                !mobileMenuButton.contains(event.target)) {
                sidebar.classList.remove('open');
            }
        });

        // Handle window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth > 768) {
                document.getElementById('sidebar').classList.remove('open');
            }
        });
    </script>

</body>
</html>